@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!--  LİST-UPDATE-DELETE   -->

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Kategori Adı</th>
            <th scope="col">Kategori Açıklaması</th>

            <th scope="col">Güncelle </th>
            <th scope="col">Sil </th>

        </tr>
    </thead>
</table>

<table class="table table-striped table-hover">
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.CategoryName </td>
                <td>@item.CategoryDescription </td>
                <td> <a class="btn btn-info" href="/Admin/Category/CategoryUpdate/@item.CategoryId">Güncelle</a></td>
                <td><a class="btn btn-danger" href="/Admin/Category/CategoryDelete/@item.CategoryId">Sil </a></td>
            </tr>
        </tbody>

    }
</table>